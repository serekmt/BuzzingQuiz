<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.quiz.buzzquiz.NewRoomActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/napis_nowy"
        android:src="@mipmap/nowypokoj" />

    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newRoomName"
        android:hint="Nazwa"
        android:gravity="center"
        android:textAlignment="center" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/dodaj"
        android:background="#ffbe2c31"
        android:backgroundTint="#ffbe2c31"
        android:textColor="#ffffffff"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:onClick="AddRoomButtonClicked"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/logoNewRoom"
        android:src="@mipmap/logo" />

</LinearLayout>
